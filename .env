# Backend Environment Example
# For local/demo use, only AI_SERVICE_URL and DB settings are needed.
# All other keys can be left as defaults unless you want to enable specific features.
# If AI_SERVICE_URL points to http://localhost:5000, the backend will use your local AI Layer 2.

# Server Configuration
PORT=8081
APP_ENV=development
SERVER_TIMEOUT=30s
BASE_URL=http://localhost:8081

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ai_character_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=character-demo
DB_SSL_MODE=disable
DB_MAX_CONNS=20
DB_TIMEOUT=5s

# JWT Configuration
JWT_SECRET=supersecretkey
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=anothersecretkey456
JWT_REFRESH_EXPIRY=168h

# Security Configuration
RATE_LIMIT=5
RATE_LIMIT_BURST=10
ALLOWED_ORIGINS=*
TRUSTED_PROXIES=127.0.0.1
MAX_BODY_SIZE=10485760
TIMESTAMP_WINDOW=15m

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_AUDIO_PROCESSING=true
ENABLE_WEBSOCKETS=true
ENABLE_HISTORY=true
ENABLE_ANALYTICS=true
MAX_MESSAGES_PER_SESSION=1000
MAX_SESSIONS_PER_USER=20
MAX_CHARACTERS_PER_USER=50
MAX_AUDIO_CHUNK_SIZE=5242880
MAX_AUDIO_DURATION=5m
MAX_AUDIO_TTL=168h
DEFAULT_AUDIO_TTL=24h
MAX_AUDIO_CHUNKS_PER_USER=100
MAX_AUDIO_CHUNKS_PER_DAY=25
AUDIO_CHUNK_CLEANUP_PERIOD=1h

# Service Endpoints
AI_SERVICE_URL=http://orchestrator:8010
ML_SERVICE_URL=https://finetuned-model-wmoqzjog.eastus2.models.ai.azure.com

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=5m
CACHE_MAX_SIZE=1000
CACHE_PURGE_WINDOW=10m

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
ELEVENLABS_API_KEY=sk_3fd409d0bd41ceb4d8bbf58372fa29b899569d2a7e4fa23f
USE_LOCAL_MODEL=false
LOCAL_MODEL_URL=false
